mixin crystal---textblock(textblock_options)
  section.crystal---textblock(class=[
    `crystal---textblock--${textblock_options.modifier}`,
    textblock_options.mixedClasses
  ])
    .crystal---textblock__container.aligner
      h2.crystal---textblock__heading= textblock_options.heading
      .crystal---textblock__content
        mixin crystal---textblock__paragraph(paragraphText)
          p.crystal---textblock__paragraph!= paragraphText
        each value in textblock_options.dataSource
          +crystal---textblock__paragraph(value)
