mixin _bem-crystal-BLOCK-picture(bem_pictureBlock_options)
  - const blockClass = `crystal-${bem_pictureBlock_options.subname}-picture`;
  li(
    class=[
      blockClass,
      `${blockClass}--${bem_pictureBlock_options.number}`,
    ]
  )&attributes({
    class: bem_pictureBlock_options.mixedClasses,
  })
    +crystal-photo({
      fileSubmane: bem_pictureBlock_options.subname,
      number: bem_pictureBlock_options.number,
    })


mixin crystal-picture-block(pictureblock_options)
  section.crystal-picture-block(
    class=[
      `crystal-picture-block--${pictureblock_options.modifier}`,
      `${mainElement}section`,
    ]
  )
    +crystal-heading({
      generalModifier: 'pictures',
      specialModifier: pictureblock_options.modifier,
      mixedClasses: 'crystal-picture-block__heading',
      text: pictureblock_options.heading,
    })
    .crystal-picture-block__container
      if pictureblock_options.modifier === 'primary'
        p.crystal-picture-block__legend Полноэкранный скроллинг
      ul.crystal-picture-block__list
        - for (let i = 0; i < pictureblock_options.imagesAmount; i++)
          +_bem-crystal-BLOCK-picture({
            number: i + 1,
            subname: pictureblock_options.modifier,
            mixedClasses: `crystal-picture-block__item crystal-picture-block__item--${i + 1}`,
          })
